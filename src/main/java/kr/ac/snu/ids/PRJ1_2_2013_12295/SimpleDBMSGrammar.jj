/// 0. easy ones
void dropTableQuery() :
{}
{
  < DROP >
  < TABLE >
  tableName()
}
void descQuery() throws DBException :
{
  String tableName;
}
{
  < DESC >
  tableName = tableName()
  {
    String result = manager.descTable(tableName);
    System.out.println(result);
  }
}

void showTablesQuery() throws DBException :
